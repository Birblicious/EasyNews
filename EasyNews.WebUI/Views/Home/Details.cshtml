@model EasyNews.Core.ViewModels.GuardianDetailsViewModel

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.Partial("_HeaderNavbar", Model.guardianFilter);
}

<div class="row justify-content-center">
    <h2><i class="far fa-bookmark"></i> News Detail</h2>
</div>

<hr />
<hr style="background-color:gold" />
<hr />


<div style="font-family: philosopher">

    <div class="row justify-content-center">
        <h2>@Html.Raw(Model.GuardianResults.fields.headline)</h2>
    </div>
    <div class="text-justify">
        <hr />
        <div class="row justify-content-center">
            @Html.Raw(Model.GuardianResults.fields.main)
        </div>

        <hr />
        @Html.Raw(Model.GuardianResults.fields.body)
    </div>

</div>

